<div class="tab-pane fade show <% if(!event_data && !library_data){%> active <% } %> " id="education" role="tabpanel" aria-labelledby="education-tab">
    <div class="row align-items-center pt-3 pt-sm-4 pt-md-0 px-3 px-sm-4 px-lg-0">
        <h3 class="mb-lg-4">Daily Digest</h3>
         <!-- Basic info -->
      <h2 class="h5 text-primary mb-4">Keep your team updated</h2>
      <form class="needs-validation border-bottom pb-3 pb-lg-4" novalidate>
        <div class="row pb-2">
          <div class="col-sm-6 mb-4">
            <label for="fn" class="form-label fs-base">Title</label>
            <input type="text" id="fn" class="form-control form-control-lg" placeholder="Add a Title..." required>
            <div class="invalid-feedback">Please enter a title</div>
          </div>
          <div class="col-12 mb-4">
            <label for="message" class="form-label">Message</label>
            <textarea id="message" class="form-control" rows="4" required></textarea>
            <div class="invalid-feedback">Please, enter your message!</div>
          </div>
        </div>
        <div class="d-flex mb-3">
          <button type="reset" class="btn btn-secondary me-3">Cancel</button>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </form>

  </div>
</div>
