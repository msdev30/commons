    <% if(role === "Admin") {%>
      <script>
        const edit_event =   [...document.querySelectorAll('.edit-event')];
        const delete_event = [...document.querySelectorAll('.delete-event')];
        edit_event.forEach(event=>{
          event.addEventListener("click",()=>{
              const parent_event_container = event.parentElement.parentElement;
              let event_data = {
              img : parent_event_container.querySelector('.event-img').getAttribute('data-img'),
              type :   parent_event_container.querySelector('.event-type').innerText,
              title :  parent_event_container.querySelector('.event-title').innerText,
              message : parent_event_container.querySelector('.event-message').innerText,
              dateTime : parent_event_container.querySelector('.event-date').innerText,
              location : parent_event_container.querySelector('.event-location').innerText,
              link:     parent_event_container.querySelector('.event-link')?parent_event_container.querySelector('.event-link').href:'',
              documentId: parent_event_container.getAttribute('data-id')
              }
              
              let form = document.createElement("form");
              for(let val in event_data){
                let el = document.createElement("input")
                    el.name = val
                    el.value = event_data[val].toString()
                form.appendChild(el)
              }
              form.method = "POST";
              form.action = "/edit-event";
              document.body.appendChild(form);
              form.submit();
          })
        })

        delete_event.forEach(event=>{
          event.addEventListener("click",()=>{
            const parent_event_container = event.parentElement.parentElement;
            // fetch to delete content
            fetch('/delete-event', {
              method: 'delete',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({documentId:parent_event_container.getAttribute('data-id')}),
            }).then((response) => {
              if(response.status == 200)
                parent_event_container.style.display="none";
            })
          })
        })
        
      </script>
    <% } %> 
    
    <script>
