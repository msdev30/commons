      let search_event_input =  document.querySelector('.search-event-input')

      console.log(event_cards)
      const showAllCards = ()=>{
        event_cards.forEach(card=>{
          card.style.display = 'block'
        })
      }
      
      search.addEventListener("click",()=>{
        if(!search_event_input.value)
          return 
        event_cards.forEach(card=>{
          console.log(card)
          if(!card.querySelector('.event-title').innerText.contains(search_event_input.value))
            card.style.display = 'none'
        })
